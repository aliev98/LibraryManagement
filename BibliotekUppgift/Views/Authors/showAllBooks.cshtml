@model LibraryDomain.Author

@{
    ViewData["Title"] = "showAllBooks";
}

<h2>Books from @Html.DisplayFor(modelItem => modelItem.Name)  </h2>

@{
    ViewData["Title"] = "Books from this author";
}

<p>
    <a asp-action="Index">Back</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>ISBN</th>
            <th>Titel</th>
            <th>Beskrivning</th>
            <th></th>
        </tr>
    </thead>

    <tbody>

        @foreach (var item in Model.Books)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ISBN)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                @*<td>
                        @Html.DisplayFor(modelItem => item.Author.ID)
                </td>*@
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                @*<td>
                        @Html.DisplayFor(modelItem => item.NumberOfCopies)
                </td>*@
            </tr>
        }
    </tbody>
</table>